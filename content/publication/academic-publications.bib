@book{guillaumont-jeanneneyAllierSecuriteDeveloppement2016,
  title = {Allier securite et developpement, plaidoyer pour le Sahel},
  author = {Guillaumont Jeanneney, S. and Angely, C. and Brachet, A. and Collier, P. and Garenne, M. and Guillaumont, P. and Joubert, B. and Laville, C. and de Melo, J. and Michailof, S. and Miribel, B. and Ray, O. and Zongo, T.},
